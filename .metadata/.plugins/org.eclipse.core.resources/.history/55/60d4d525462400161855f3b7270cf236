package eae;

import java.util.ArrayList;
import java.util.List;

import org.apache.camel.Exchange;
import org.apache.camel.Processor;
import org.apache.camel.builder.RouteBuilder;
import org.springframework.beans.factory.annotation.Autowired;


public class EaeRoutes extends RouteBuilder {

	@Override
	public void configure() throws Exception {
		from("direct:example").process(new Processor() {
			public void process(Exchange exchange) throws Exception {
				List<Frog> frogs = new ArrayList<Frog>();
				Frog frog = new Frog("long", "Fred", 22);
				exchange.getIn().setBody(frog);
				exchange.getIn().setHeader("CamelFileName", "frog.json");
			}
		});
	}
}
